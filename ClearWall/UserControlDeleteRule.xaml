<!-- User Control content for deleting rules-->
<UserControl x:Class="ClearWall.UserControlDeleteRule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClearWall"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="700">
    <Grid Margin="10">
        <StackPanel>
            <!--- Interface -->
            <TextBlock Text="Rule Name" />
            <TextBox x:Name="RuleName" />
            <Button Content="Delete Rule" Click="DeleteRuleButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
