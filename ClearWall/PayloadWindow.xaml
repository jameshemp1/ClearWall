<Window x:Class="ClearWall.PayloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClearWall"
        mc:Ignorable="d"
        Title="PayloadWindow" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Displays Payload string from PacketDetails model -->
        <TextBox Text="{Binding Payload}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
    </Grid>
</Window>
